<%= form_for(@post, html: { multipart: true }) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write your message here",
                              class: 'form-control' %>
  </div>
  <div class="media">
    <%= f.text_field :media, placeholder: "Insert youtube link here",
                             class: 'form-control' %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
                               class: 'form-control' %>
  </span>
  <%= f.submit "Create post", class: "btn btn-primary" %>
<% end %>