
<li id="post-<%= post.id %>">
  <span class="avatar"><%= link_to image_tag(post.user.avatar.url, size: "50"), user_path(post.user) %></span>
  <strong class="username"><%= full_name(post.user) %></strong>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "delete", post, method: :delete, class: "right" %>
    <% end %>
  </span>
  <span class="content"><%= post.content %></span>
  <span class="post-image"><%= image_tag post.image if post.image %></span>
  <% unless post.media.blank? %>
    <span class="youtube-player">
      <iframe width="560" height="349" src="http://www.youtube.com/embed/<%= post.media %>"
       frameborder="0"></iframe>
    </span>
  <% end %>
</li>
