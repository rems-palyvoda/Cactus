
<li id="post-<%= post.id %>">
  <span class="avatar"><%= link_to image_tag(post.user.avatar.url, size: "50"), user_path(post.user) %></span>
  <strong class="username"><%= full_name(post.user) %></strong>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span><br>
  <spanc lass="content"><%= post.content %></span>
</li>