<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= render "layouts/aside" %>
    </aside>
    <div class="col-md-8" id="feed">
      <h3>Post Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Cactus Social Network</h1>
    <%= render "shared/login_form" %>
  </div>
<% end %>