<% provide(:title, full_name(current_user)) %>
<div class="row">
  <aside class="col-md-4">
    <%= render "layouts/aside" %>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3> Posts (<%= @user.posts.count %>) </h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>

























